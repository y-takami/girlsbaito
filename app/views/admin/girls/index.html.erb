<% @title = '女子会員管理' %>
<h1><%= @title %></h1>

<div class="table-wrapper">

  <%= paginate @girls %>

  <table class="table table-bordered">
    <tr>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>登録日時</th>
    </tr>
    <% @girls.each do |m| %>
      <tr>
        <td><%= m.name %></td>
        <td><%= m.email %></td>
        <td><%= m.created_at %></td>
        <td>
          <%#= link_to '採用', aaaa %>｜
          <%#= link_to '不採用', aaaa %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= paginate @girls %>

</div>
