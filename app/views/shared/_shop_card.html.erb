<div class="col-sm-4 col-xs-12 block">
  <div class="thumbnail thumbnailContent">

    <%= link_to image_tag(f.main_image.url, :alt => "image"), girl_shop_path(f.id), {:class => "img-responsive"} %>

    <div class="sticker bg-color-6"><br>お祝い金<br><%= f.congratulation_money.to_s(:delimited) %>円</div>

    <div class="caption border-color-6">

      <h3>
        <%= link_to "#{f.shop_name}", girl_shop_path(f.id), {:class => "color-6"} %>
      </h3>

      <ul class="list-unstyled">
        <li>
          <span><i class="fa fa-map-o" aria-hidden="true"></i><%= f.city.name %></span>
          <span><i class="fa fa-list" aria-hidden="true"></i><%= f.category.name %></span>
          <span><i class="fa fa-money" aria-hidden="true"></i><%= f.payment_hour_low.to_s(:delimited) %>円〜<%= f.payment_hour_high.to_s(:delimited) %>円</span>
        </li>
      </ul>
      <h4><%= f.title %></h4>
      <h5><%= f.summary %></h5>
      <ul class="list-inline btn-yellow">
        <li>
          <%= link_to girl_shop_path(f.id), :class => "btn btn-link" do %>
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>詳しく見る
          <% end %>

        </li>
      </ul>
    </div>
  </div>
</div>

