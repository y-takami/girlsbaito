<% if @city %>
  <% @title = "#{@city.name}の求人" %>

<% elsif @station %>
  <% @title = "#{@station.name}駅の求人" %>

<% elsif @category %>
  <% @title = "#{@prefecture.name}の#{@category.name}求人" %>

<% elsif @prefecture %>
  <% @title = "#{@prefecture.name}の求人" %>

<% else %>

  <% @title = '店舗一覧' %>

<% end %>

<% unless @shops_count == 0 %>
  <%= render 'shared/page_title', f1: @title, f2: "#{@shops_count}件ありました", f3: false %>
<% else %>
  <%= render 'shared/page_title', f1: @title, f2: "申し訳ございません。お探しの条件の求人はありません", f3: false %>
<% end %>

<%= render 'girl/shared/breadcrumb' %>
<%= render 'girl/shared/search_form' %>

<div class="text-center">
<%= paginate @shops %>
</div>

<div class="table-responsive">
  <% @shops.each do |n| %>

    <%= render 'shared/shop_card', f: n %>

  <% end %>
</div>
<div class="text-center">
  <%= paginate @shops %>
</div>
