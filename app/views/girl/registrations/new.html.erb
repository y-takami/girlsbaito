<% @title = 'アカウント作成' %>

<%= render 'shared/page_title', f1: @title, f2: false, f3: false %>

<div class="container">

  <div class="form-group">
    項目は全て必須入力です。
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", {:class => "control-label"} %>
      <%= f.text_field :email, autofocus: true, placeholder: "hanako@email.com", :class => "form-control border-color-1" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", {:class => "control-label"} %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力", :class => "form-control border-color-2" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード再確認", {:class => "control-label"} %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード再確認", :class => "form-control border-color-3" %>
    </div>

    <div class="form-group">
      <%= f.submit 'アカウント作成', :class => "btn btn-outline-primary" %>
    </div>

    <% @invitation_code = rand(100000...999999) %>
    <%= f.hidden_field :invitation_code, :value => @invitation_code %>

  <% end %>

  <%= render "girl/shared/links" %>

</div>



