<% @title = 'アカウント登録情報更新' %>

<%= render 'shared/page_title', f1: @title, f2: false, f3: false %>

<div class="container">
  <%= render 'shared/errors', f: @girl %>
  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>

    <div class="form-group">
      項目は全て必須入力です。
    </div>

    <div class="form-group">
      <%= f.label :name, "氏名", {:class => "control-label"} %>
      <%= f.text_field :name, placeholder: "山田　花子", :class => "form-control border-color-1" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", {:class => "control-label"} %>
      <%= f.text_field :email, placeholder: "hanako@email.com", :class => "form-control border-color-2" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>現在メールアドレスの確認待ちです: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :tel, "電話番号（ハイフンなし）", {:class => "control-label"} %>
      <%= f.text_field :tel, placeholder: "09012345678", :class => "form-control border-color-3" %>
    </div>

    <div class="form-group">
      <%= f.label :line_id, "ラインID", {:class => "control-label"} %>
      <%= f.text_field :line_id, placeholder: "hanako", :class => "form-control border-color-4" %>
    </div>

    <div class="field">
      <%= f.label :password, "新パスワード", {:class => "control-label"}  %> <i>(変更をしない場合は空欄のままにしてください)</i><br/>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control border-color-5" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新パスワード再確認", {:class => "control-label"}  %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control border-color-6" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "現在のパスワード", {:class => "control-label"}  %> <i>(変更をするには現在のパスワードの入力が必要です。)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off", :class => "form-control border-color-1" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する", :class => "btn btn-outline-primary" %>
    </div>
  <% end %>

  <%= link_to "戻る", :back, :class => "btn btn-outline-primary" %>


</div>