<% @title = 'アカウント登録情報更新' %>

<%= render 'shared/page_title', f1: @title, f2: false, f3: false %>

<div class="container">
  <%= render 'shared/errors', f: @girl %>

  <div class="form-group">
    項目は全て必須入力です。
  </div>

  <%= form_for @girl, url: :girl_account do |f| %>

    <div class="form-group">
      <%= f.label :name, "氏名", {:class => "control-label"} %>
      <%= f.text_field :name, placeholder: "山田　花子", :class => "form-control border-color-1" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", {:class => "control-label"} %>
      <%= f.text_field :email, placeholder: "hanako@email.com", :class => "form-control border-color-2" %>
    </div>

    <div class="form-group">
      <%= f.label :tel, "電話番号（ハイフンなし）", {:class => "control-label"} %>
      <%= f.text_field :tel, placeholder: "09012345678", :class => "form-control border-color-3" %>
    </div>

    <div class="form-group">
      <%= f.label :line_id, "ラインID", {:class => "control-label"} %>
      <%= f.text_field :line_id, placeholder: "hanako", :class => "form-control border-color-4" %>
    </div>

    <div class="form-group">
      <%= f.submit '更新する', :class => "btn btn-outline-primary" %>
    </div>

  <% end %>
</div>