<% @title = '気になる店舗一覧' %>

<% unless @shops_count == 0 %>
  <%= render 'shared/page_title', f1: @title, f2: "#{@shops_count}件あります", f3: false %>
<% else %>
  <%= render 'shared/page_title', f1: @title, f2: "気になるに追加した店舗はありません", f3: false %>
<% end %>

<div class="table-responsive">
  <% if @shops %>
    <% @shops.each do |n| %>
      <%= render 'shared/shop_card', f: n %>

    <% end %>
  <% end %>
</div>