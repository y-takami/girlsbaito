<header id="pageTop" class="header-wrapper">

  <%= render 'shared/bar' %>

  <!-- TOP INFO BAR -->
  <div class="top-info-bar bg-color-7 hidden-xs">
    <div class="container">
      <div class="row">
        <div class="col-sm-7">
          <ul class="list-inline topList">
            <li><i class="fa fa-envelope bg-color-1" aria-hidden="true"></i>
              <a href="mailto:info@yourdomain.com">◯◯@◯◯.com</a></li>
            <li><i class="fa fa-phone bg-color-2" aria-hidden="true"></i> ◯◯</li>
          </ul>
        </div>

      </div>
    </div>
  </div>


  <!-- NAVBAR -->
  <nav id="menuBar" class="navbar navbar-default lightHeader" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("logo.png", :alt => "女子バイトlogo"), girl_root_path, {:class => "navbar-brand"} %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">


          <li class=" dropdown color-2">
            <%= link_to :new_girl_prefecture, :class => "dropdown-toggle", :'aria-haspopup' => true, :'aria-expanded' => false do %>
              <i class="fa fa-file-text-o bg-color-2" aria-hidden="true"></i><span>都道府県変更<i class="fa fa-angle-right pull-right" aria-hidden="true"></i></span>
            <% end %>
          </li>

          <li class="dropdown color-4 ">
            <% if current_girl %>
              <%= link_to :girl_account, :class => "dropdown-toggle", :'aria-haspopup' => true, :'aria-expanded' => false do %>
                <i class="fa fa-pencil-square-o bg-color-4" aria-hidden="true"></i><span>アカウント情報<i class="fa fa-angle-right pull-right" aria-hidden="true"></i></span>
              <% end %>
            <% end %>
          </li>

          <li class="dropdown color-5  ">
            <%= link_to :girl_favorite, :class => "dropdown-toggle", :'aria-haspopup' => true, :'aria-expanded' => false do %>
              <i class="fa fa-calendar bg-color-5" aria-hidden="true"></i><span>気になるリスト<i class="fa fa-angle-right pull-right" aria-hidden="true"></i></span>
            <% end %>
          </li>

          <li class="dropdown color-6 ">
            <%= link_to :girl_history, :class => "dropdown-toggle", :'aria-haspopup' => true, :'aria-expanded' => false do %>
              <i class="fa fa-gg bg-color-6" aria-hidden="true"></i><span>閲覧履歴リスト<i class="fa fa-angle-right pull-right" aria-hidden="true"></i></span>
            <% end %>
          </li>

          <li class="dropdown color-1 ">
            <% if current_girl %>
              <%= link_to :destroy_girl_session, method: :delete, :class => "dropdown-toggle", :'aria-haspopup' => true, :'aria-expanded' => false do %>
                <i class="fa fa-unlock-alt bg-color-1" aria-hidden="true"></i><span>ログアウト<i class="fa fa-angle-right pull-right" aria-hidden="true"></i></span>
              <% end %>
            <% else %>
              <%= link_to :new_girl_session, :class => "dropdown-toggle", :'aria-haspopup' => true, :'aria-expanded' => false do %>
                <i class="fa fa-unlock-alt bg-color-1" aria-hidden="true"></i><span>ログイン/新規登録<i class="fa fa-angle-right pull-right" aria-hidden="true"></i></span>
              <% end %>
            <% end %>
          </li>

        </ul>
      </div>
    </div>
    　
  </nav>
  <%= content_tag(:div, flash.notice, class: 'alert alert-success') if flash.notice %>
  <%= content_tag(:div, flash.alert, class: 'alert alert-danger') if flash.alert %>
</header>
