<% @title = 'パスワードを忘れた方へ' %>

<%= render 'shared/page_title', f1: @title, f2: false, f3: false %>

<div class="container">

  <div class="form-group">
    項目は全て必須入力です。
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", {:class => "control-label"} %>
      <%= f.text_field :email, placeholder: "hanako@email.com", :class => "form-control border-color-1" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードリセットを行う。", :class => "btn btn-outline-primary" %>
    </div>
  <% end %>

  <%= render "girl/shared/links" %>

</div>

