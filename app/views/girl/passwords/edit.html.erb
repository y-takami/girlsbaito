<% @title = 'パスワード変更' %>
<div class="container">
  <h1><%= @title %></h1>

  <%= form_for @change_password_form, url: :girl_password, method: :patch do |f| %>

    <div class="form-group">
      <%= f.label :current_password, "現在のパスワード", {:class => "control-label"} %>
      <%= f.password_field :current_password, placeholder: "現在のパスワード", :class => "form-control border-color-1" %>
    </div>

    <div class="form-group">
      <%= f.label :new_password, "新しいパスワード", {:class => "control-label"} %>
      <%= f.password_field :new_password, placeholder: "新しいパスワード", :class => "form-control border-color-2" %>
    </div>

    <div class="form-group">
      <%= f.label :new_password_confirmation, "新しいパスワード（確認用）", {:class => "control-label"} %>
      <%= f.password_field :new_password_confirmation, placeholder: "新しいパスワード（確認用）", :class => "form-control border-color-3" %>
    </div>

    <div class="form-group">
      <%= f.submit '変更する', {:class => "btn btn-outline-primary"} %>
      <%= link_to 'キャンセル', :girl_account %>
    </div>
  <% end %>

</div>