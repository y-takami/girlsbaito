<% @title = '職種選択' %> <h1><%= @title %></h1>

<ul class="breadcrumb">
  <li><%= link_to 'HOME', :new_girl_prefecture %><span class="divider"></span></li>
  <li class="active"><%= @prefecture.name %></li>
</ul>

<% @categories.each do |f| %>
  <div class="list-group">
    <%= link_to "#{f.name}（#{@shop_shows.where(category_id: f.id).where(examine: true).count}）", girl_prefecture_category_path(@prefecture.id, f.id), {:class => "list-group-item col-sm-3"} %>
  </div>

<% end %>