<% @title = '職種選択' %>

<%= render 'shared/page_title', f1: @title, f2: false, f3: false %>

<ul class="breadcrumb">
  <li><%= link_to 'HOME', :new_girl_prefecture %><span class="divider"></span></li>
  <li class="active"><%= @prefecture.name %></li>
</ul>


<div class="container">
  <% @categories.each do |f| %>
    <ul class="list-group text-center col-sm-4 col-xs-12">
      <%= link_to "#{f.name}（#{@shop_shows.where(category_id: f.id).where(examine: true).count}）", girl_prefecture_category_path(@prefecture.id, f.id), {:class => "list-group-item"} %>
    </ul>
  <% end %>
</div>